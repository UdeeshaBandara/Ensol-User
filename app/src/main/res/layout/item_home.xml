<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    android:background="@color/white"

    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/machine_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_machine2"

            app:riv_corner_radius="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/machine_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/machine_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="Zoyer Heavy-duty mattress over-lock sewing machine"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/machine_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="2"
                android:text="LKR 8500.00"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/machine_image"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="Quantity : 5"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>