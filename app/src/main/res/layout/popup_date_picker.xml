<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <dev.joshhalvorson.calendar_date_range_picker.calendar.CalendarPicker
            android:id="@+id/calendarPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dateRangeTextColor="@color/red"
            app:dayTextColor="@color/black"
            app:daysOfWeekTextColor="@color/black"
            app:eventDotColor="@color/red"
            app:eventDotColorWhenHighlighted="@color/white"
            app:eventDotColorWhenSelected="@color/white"
            app:eventDotGravity="end"
            app:firstSelectedDateTextColor="@color/white"
            app:highlightedDatesBackgroundColor="#A67C7C7C"
            app:highlightedDatesTextColor="@color/black"
            app:nextMonthButtonColor="@color/white"
            app:previousMonthButtonColor="@color/white"
            app:secondSelectedDateTextColor="@color/white"
            app:selectedDateCircleColor="@color/red"
            app:titleColor="@color/black"
            app:yearSelectButtonColor="@color/white"
            app:yearSelectButtonIconColor="@color/black"
            app:yearSelectButtonTextColor="@color/black"
            app:yearTextColor="@color/red" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_below="@+id/calendarPicker"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_below="@+id/calendarPicker"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/roboto_bold"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>